<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Orders | Data Tables</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="/plugins/datatables/dataTables.bootstrap.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="/dist/css/skins/_all-skins.min.css">

    <script src="/angularjs/angular.min.js"></script>

    <link href="/dist/css/xeditable.css" rel="stylesheet">
    <script src="/dist/js/xeditable.js"></script>
    <script src="/angularjs/adminModule.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body class="hold-transition skin-blue sidebar-mini" ng-app="adminModule" ng-controller="adminController">
    <div class="wrapper">
      <header class="main-header">
        <% include ./partials/admin-header %>
      </header>

      <!-- Left side column. contains the logo and sidebar -->
      <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
          <!-- Sidebar user panel -->
          <div class="user-panel">
            <div class="pull-left image">
              <img src="/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
              <p><%= fname %> <%= lname %></p>
              <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
          </div>
          <!-- search form -->
          <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
              <input type="text" name="q" class="form-control" placeholder="Search...">
              <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
              </span>
            </div>
          </form>
          <!-- /.search form -->
          <!-- sidebar menu: : style can be found in sidebar.less -->
          <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>
            <li class="treeview">
              <a href="#">
                <i class="fa fa-dashboard"></i> <span>Dashboard</span> <i class="fa fa-angle-left pull-right"></i>
              </a>
              <ul class="treeview-menu">
                <li><a href="/admin/home"><i class="fa fa-circle-o"></i> Dashboard</a></li>
                <li><a href="/admin/home"><i class="fa fa-circle-o"></i> Statistics</a></li>
              </ul>
            </li>
            <li class="active treeview">
              <a href="#">
                <i class="fa fa-table"></i> <span>Tables</span>
                <i class="fa fa-angle-left pull-right"></i>
              </a>
              <ul class="treeview-menu">
                <li><a href="/admin/farmers/list"><i class="fa fa-circle-o"></i> Farmers List</a></li>
                <li><a href="/admin/products/list"><i class="fa fa-circle-o"></i> Products List</a></li>
                <li><a href="/admin/trucks/list"><i class="fa fa-circle-o"></i> Trucks List</a></li>
                <li><a href="/admin/drivers/list"><i class="fa fa-circle-o"></i> Drivers List</a></li>
                <li><a href="/admin/customers/list"><i class="fa fa-circle-o"></i> Customers List</a></li>
                <li class="active"><a href="/admin/orders/list"><i class="fa fa-circle-o"></i> Orders List</a></li>
              </ul>
            </li>
          </ul>
        </section>
        <!-- /.sidebar -->
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Orders Data Tables
            <small>All data</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Orders table</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-xs-12">
              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Orders Data Table</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="example1" class="table table-bordered table-hover table-striped">
                    <thead>
                      <tr>
                        <th>Order Id</th>
                        <th>Customer Id</th>
                        <th>Driver Id</th>
                        <th>Contacts</th>
                        <th>Date</th>
                        <th>Sub Total</th>
                        <th>Tax</th>
                        <th>Shipping Cost</th>
                        <th>E.D.T.</th>
                        <th>Pick-Up</th>
                        <th>Drop</th>
                        <th>Distance</th>
                        <th>Time</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>order1</td>
                        <td>customer2</td>
                        <td>driver4</td>
                        <td>1234567890</td>
                        <td>04/21/2016</td>
                        <td>39.99</td>
                        <td>3.99</td>
                        <td>5</td>
                        <td>04/22/2016</td>
                        <td>No</td>
                        <td>Yes</td>
                        <td>56 Miles</td>
                        <td>3:00 P.M.(PST)</td>
                      </tr>
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>Order Id</th>
                        <th>Customer Id</th>
                        <th>Driver Id</th>
                        <th>Contacts</th>
                        <th>Date</th>
                        <th>Sub Total</th>
                        <th>Tax</th>
                        <th>Shipping Cost</th>
                        <th>E.D.T.</th>
                        <th>Pick-Up</th>
                        <th>Drop</th>
                        <th>Distance</th>
                        <th>Time</th>
                      </tr>
                    </tfoot>
                  </table>
                </br>
                <button class="btn btn-default" id = "addorder" data-toggle = "modal" data-target = "#addOrderModal">Add Order</button>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
          
          <!-- Add Order Modal -->
          <div id="addOrderModal" class= "modal fade" role = "dialog">
            <div class= "modal-dialog modal-md">
              <!-- Add Order Modal Content -->
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h3 class="moda-title">Add Order</h3>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                      <label for="c_email">Customer Email</label>
                      <input type="email" class="form-control" placeholder="Enter Customer Email" ng-model="c_email" required>
                      <!-- Customer Email Validation Here-->
                      <!-- -->
                    </div>
                    <div class="form-group">
                      <label for="driver_id">Order Id</label>
                      <input type="text" class="form-control" placeholder="Enter Driver Id" ng-model="driver_id" required>
                      <!-- Driver Id Validation Here-->
                      <!-- -->
                    </div>
                    <div class="form-group">
                      <label for="address">Address</label>
                      <input type="text" class="form-control" placeholder="Enter Address" ng-model="address" required>
                      <!-- Address Validation Here-->
                      <!-- -->
                    </div>
                    <div class="form-group">
                      <label for="city">City</label>
                      <input type="text" class="form-control" placeholder="Enter City" ng-model="city" required>
                      <!-- City Validation Here-->
                      <!-- -->
                    </div>
                    <div class="form-group">
                      <label for="state">State</label>
                      <input type="text" class="form-control" placeholder="Enter State" ng-model="state" required>
                      <!-- State Validation Here-->
                      <!-- -->
                    </div>
                    <div class="form-group">
                      <label for="zip_code">Zip Code</label>
                      <input type="text" class="form-control" placeholder="Enter Zip Code" ng-model="zip_code" required>
                      <!-- Zip Code Validation Here-->
                      <!-- -->
                    </div>
                    <div class="form-group">
                      <label for="sub_total">Sub Total</label>
                      <input type="text" class="form-control" placeholder="Enter Sub Total" ng-model="sub_total" required>
                      <!-- Sub Total Validation Here-->
                      <!-- -->
                    </div>
                    <div class="form-group">
                      <label for="tax">Tax</label>
                      <input type="text" class="form-control" placeholder="Enter Tax" ng-model="tax" required>
                      <!-- Tax Validation Here-->
                      <!-- -->
                    </div>
                    <div class="form-group">
                      <label for="ship_cose">Ship Cost</label>
                      <input type="text" class="form-control" placeholder="Enter Ship Cost" ng-model="ship_cost" required>
                      <!-- Ship Cost Validation Here-->
                      <!-- -->
                    </div>
                    <div class="form-group">
                      <label for="edt">Estimated Delivery Time</label>
                      <input type="text" class="form-control" placeholder="Enter Estimated Delivery Time" ng-model="edt" required>
                      <!-- Estimated Delivery Time Validation Here-->
                      <!-- -->
                    </div>
                    <div class="form-group">
                      <label for="pickup_time">Pick-Up Time</label>
                      <input type="text" class="form-control" placeholder="Enter Pick-Up Time" ng-model="pickup_time" required>
                      <!-- Pick-Up Time Validation Here-->
                      <!-- -->
                    </div>
                    <div class="form-group">
                      <label for="drop_time">Drop Time</label>
                      <input type="text" class="form-control" placeholder="Enter Drop Time" ng-model="drop_time" required>
                      <!-- Drop Time Validation Here-->
                      <!-- -->
                    </div>
                    <div class="form-group">
                      <label for="distance">Distance</label>
                      <input type="text" class="form-control" placeholder="Enter Distance" ng-model="distance" required>
                      <!-- Distance Validation Here-->
                      <!-- -->
                    </div>
                    <div class="form-group">
                      <label for="order_time">Order Time</label>
                      <input type="text" class="form-control" placeholder="Enter Order Time" ng-model="order_time" required>
                      <!-- Order Time Validation Here-->
                      <!-- -->
                    </div>
                    <button class="btn btn-default" ng-click="addOrder();">Add Order</button>
                </div>
                <!-- Content End for Modal-->
              </div>
            </div>
          </div>
          <!-- Add Order Modal End -->
        
        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->
      <footer class="main-footer">
        <% include ./partials/admin-footer %>
      </footer>
      <% include ./partials/admin-aside %> 
      <!-- Add the sidebar's background. This div must be placed
           immediately after the control sidebar -->
      <div class="control-sidebar-bg"></div>
    </div><!-- ./wrapper -->

    <!-- jQuery 2.1.4 -->
    <script src="/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <!-- DataTables -->
    <script src="/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="/plugins/fastclick/fastclick.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/dist/js/app.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="/dist/js/demo.js"></script>
    <!-- page script -->
    <script>
      $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
          "paging": true,
          "lengthChange": false,
          "searching": false,
          "ordering": true,
          "info": true,
          "autoWidth": false
        });
      });
    </script>
  </body>
</html>
