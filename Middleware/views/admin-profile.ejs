<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin | Profile</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="/plugins/datatables/dataTables.bootstrap.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="/dist/css/skins/_all-skins.min.css">

    <script src="/angularjs/angular.min.js"></script>

    <link href="/dist/css/xeditable.css" rel="stylesheet">
    <script src="/dist/js/xeditable.js"></script>
    <script src="/dist/js/ng-file-upload.min.js"></script>
    <script src="/dist/js/ng-file-upload-shim.min.js"></script>
    <script src="/angularjs/adminModule.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body class="hold-transition skin-blue sidebar-mini" ng-app="adminModule" ng-controller="adminController" ng-init="getAdminProfile()">
    <div class="wrapper">
      <header class="main-header">
        <% include ./partials/admin-header %>
      </header>

      <!-- Left side column. contains the logo and sidebar -->
      <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
          <!-- Sidebar user panel -->
          <div class="user-panel">
            <div class="pull-left image">
              <img src="/dist/img/user3-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
              <p><%= fname %> <%= lname %></p>
            </div>
          </div>
         
          <!-- sidebar menu: : style can be found in sidebar.less -->
          <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>
            <li class="treeview">
              <a href="#">
                <i class="fa fa-dashboard"></i> <span>Dashboard</span> <i class="fa fa-angle-left pull-right"></i>
              </a>
              <ul class="treeview-menu">
                <li><a href="/admin/home"><i class="fa fa-circle-o"></i> Dashboard</a></li>
                <li><a href="/admin/home"><i class="fa fa-circle-o"></i> Statistics</a></li>
                <li class="active"><a href="/admin/profile"><i class="fa fa-circle-o"></i> Profile</a></li>
              </ul>
            </li>
            <li class="active treeview">
              <a href="#">
                <i class="fa fa-table"></i> <span>Tables</span>
                <i class="fa fa-angle-left pull-right"></i>
              </a>
              <ul class="treeview-menu">
                <li><a href="/admin/farmers/list"><i class="fa fa-circle-o"></i> Farmers List</a></li>
                <li><a href="/admin/products/list"><i class="fa fa-circle-o"></i> Products List</a></li>
                <li><a href="/admin/trucks/list"><i class="fa fa-circle-o"></i> Trucks List</a></li>
                <li><a href="/admin/drivers/list"><i class="fa fa-circle-o"></i> Drivers List</a></li>
                <li><a href="/admin/customers/list"><i class="fa fa-circle-o"></i> Customers List</a></li>
                <li><a href="/admin/orders/list"><i class="fa fa-circle-o"></i> Orders List</a></li>
              </ul>
            </li>
          </ul>
        </section>
        <!-- /.sidebar -->
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            <%= fname %> <%= lname %>
            <small>Profile</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="/admin/home"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Dashboard</li>
            <li class="active">Profile</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <!-- Small boxes (Stat box) -->
          <div class="row">
            <div class="col-lg-3 col-xs-6">
                <div ng-show="isProfileNotFound" style="color:#db2e2e">Can not Get Profile. Please try again!</div>
                <form editable-form name="adminEditForm" onaftersave="saveAdminProfile($data,admin.a_id)">
                  
                  </br>

                  <div>
                    <span class="title">First Name : </span>
                    <span editable-text="admin.fname" e-name="fname" e-required>{{ admin.fname || 'empty' }}</span>
                  </div> 

                  </br>
                  
                  <div>
                    <span class="title">Last Name : </span>
                    <span editable-text="admin.lname" e-name="lname" e-required>{{ admin.lname || 'empty' }}</span>
                  </div>

                  </br>
                  
                  <div>
                    <span class="title">Email : </span>
                    <span editable-text="admin.email" e-name="email" data-type="email" e-required>{{ admin.email || 'empty' }}</span>
                  </div> 
                  
                  </br>
                  
                  <div>
                    <span class="title">Password : </span>
                    <span editable-password="admin.pass" e-name="pass" e-required>{{ admin.pass || 'empty' }}</span>
                  </div> 
                  
                  </br>
                  
                  <div>
                    <span class="title">Address : </span>
                    <span editable-text="admin.address" e-name="address" e-required>{{ admin.address || 'empty' }}</span>
                  </div>
                  
                  </br> 
                  
                  <div>
                    <span class="title">City : </span>
                    <span editable-text="admin.city" e-name="city" e-required>{{ admin.city || 'empty' }}</span>
                  </div>

                  </br>

                  <div>  
                    <span class="title">State : </span>
                    <span editable-text="admin.state" e-name="state" e-required>{{ admin.state || 'empty' }}</span>
                  </div>

                  </br>

                  <div>
                    <span class="title">Zipcode : </span>
                    <span editable-number="admin.zipCode" e-name="zipCode" e-required>{{ admin.zipCode || 'empty' }}</span>
                  </div> 
                  
                  </br>

                  <div class="buttons">
                    <!-- button to show form -->
                    <button type="button" class="btn btn-default" ng-click="adminEditForm.$show()" ng-show="!adminEditForm.$visible">
                      Edit
                    </button>
                    <!-- buttons to submit / cancel form -->
                    <span ng-show="adminEditForm.$visible">
                      <button type="submit" class="btn btn-primary" ng-disabled="adminEditForm.$waiting">
                        Save
                      </button>
                      <button type="button" class="btn btn-default" ng-disabled="adminEditForm.$waiting" ng-click="adminEditForm.$cancel()">
                        Cancel
                      </button>
                    </span>
                  </div>
                </form>  

            </div><!-- ./col -->
            <div class="col-lg-3 col-xs-6" >

            </div><!-- ./col -->
          </div><!-- /.row -->
          <!-- Main row -->
          <div class="row">
            <!-- Left col -->
          </div><!-- /.row (main row) -->

        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->
      <footer class="main-footer">
        <% include ./partials/admin-footer %>
      </footer>
      <% include ./partials/admin-aside %> 
      <!-- Add the sidebar's background. This div must be placed
           immediately after the control sidebar -->
      <!-- <div class="control-sidebar-bg"></div> -->
    </div><!-- ./wrapper -->

    <!-- jQuery 2.1.4 -->
    <script src="/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <!-- DataTables -->
    <script src="/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="/plugins/fastclick/fastclick.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/dist/js/app.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="/dist/js/demo.js"></script>
