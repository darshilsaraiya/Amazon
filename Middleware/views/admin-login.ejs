<!DOCTYPE html>
<html>
  <head>
    <title>Amazon-Fresh</title>

    <% include lib.ejs %>

    <script src="/angularjs/angular.min.js"></script>

    <link href="/dist/css/xeditable.css" rel="stylesheet">
    <script src="/dist/js/xeditable.js"></script>
    <script src="/angularjs/adminModule.js"></script>

  </head>
  <body ng-app="adminModule" ng-controller = "adminController">
  	
    <div style="height: 50px; display: block;"></div>
    
    <div class="container">
      <div class="login-error-wrapper"> 
        <!-- Email=filled || password=filled -->
        <!-- -->
        <div ng-show="!isBlankEmail && !isBlankPassword && isIncorrectDetails">
          <div class="wrong-login" style = "visibility : visible;">
            <div class="pull-left" style="display: block; height: 25px; width: 25px; margin-right: 15px">
              <span class="glyphicon glyphicon-remove-sign" style="color: red; font-size: 30px"></span>
            </div>
            <div>
              <span><b>There was a problem</b></span>
              <p>Your email or password was incorrect. Please try again.</p>
            </div>
          </div>
        </div>
        <!-- -->

        <!-- Email=blank || password=blank/filled -->  
        <div ng-show="isBlankEmail">
          <div class="wrong-login" style = "visibility : visible;">
            <div class="pull-left" style="display: block; height: 25px; width: 25px; margin-right: 15px">
              <span class="glyphicon glyphicon-remove-sign" style="color: red; font-size: 30px"></span>
            </div>
            <div>
              <span><b>There was a problem</b></span>
              <p>Missing e-mail. Please correct and try again.</p>
            </div>
          </div>
        </div>

        <!-- Email=filled || password=blank -->
        <div ng-show="!isBlankEmail && isBlankPassword">
          <div class="wrong-login" style = "visibility : visible;">
           <div class="pull-left" style="display: block; height: 25px; width: 25px; margin-right: 15px">
              <span class="glyphicon glyphicon-remove-sign" style="color: red; font-size: 30px"></span>
            </div>
            <div>
              <span><b>There was a problem</b></span>
              <p>Please enter your password.</p>
            </div>
          </div>
        </div>       
        <!-- -->
      </div>

      <div class="login-wrapper">
        <div style="margin-bottom: 40px;">
          <h3><b>Admin Sign In</b></h3>
        </div>
        <form class="pull-left">
          <fieldset class="form-group has-feedback">
            <label for="email">Email address</label>
            <input type="email" class="form-control" placeholder="Enter email" name="username" ng-model="email">
            <span class="glyphicon form-control-feedback"></span>
            
          </fieldset>
          <fieldset class="form-group has-feedback">
            <label for="pass">Password</label>
            <input type="password" class="form-control" placeholder="Password" width="100%" name="password" ng-model="pass">
            <span class="glyphicon form-control-feedback"></span>
          </fieldset>
          <div class="pull-right" style="margin-top: -10px">
            <span class="forgot-pass">
              <a href="#">Forgot password?</a>
            </span>
          </div>
          <input type="submit" class="signin-btn" value="Sign In" ng-click="loginSubmit();">
        </form>
      </div>
    </div>
  </body>
</html>