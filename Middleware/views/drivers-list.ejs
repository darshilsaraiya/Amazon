    <script src="/angularjs/angular.min.js"></script>

    <link href="/dist/css/xeditable.css" rel="stylesheet">
    <script src="/dist/js/xeditable.js"></script>
    <script src="/dist/js/ng-file-upload.min.js"></script>
    <script src="/dist/js/ng-file-upload-shim.min.js"></script>
    <script src="/angularjs/adminModule.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body class="hold-transition skin-blue sidebar-mini" ng-app="adminModule" ng-controller="adminController" ng-init="getDrivers()">
    <div class="wrapper">
      <header class="main-header">
        <% include ./partials/admin-header %>
      </header>

      <!-- Left side column. contains the logo and sidebar -->
      <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
          <!-- Sidebar user panel -->
          <div class="user-panel">
            <div class="pull-left image">
              <img src="/dist/img/user3-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
              <p><%= fname %> <%= lname %></p>
            </div>
          </div>
          <!-- search form -->
          <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
              <input type="text" name="q" class="form-control" placeholder="Search...">
              <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
              </span>
            </div>
          </form>
          <!-- /.search form -->
          <!-- sidebar menu: : style can be found in sidebar.less -->
          <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>
            <li class="treeview">
              <a href="#">
                <i class="fa fa-dashboard"></i> <span>Dashboard</span> <i class="fa fa-angle-left pull-right"></i>
              </a>
              <ul class="treeview-menu">
                <li><a href="/admin/home"><i class="fa fa-circle-o"></i> Dashboard</a></li>
                <li><a href="/admin/home"><i class="fa fa-circle-o"></i> Statistics</a></li>
                <li><a href="/admin/profile"><i class="fa fa-circle-o"></i> Profile</a></li>
              </ul>
            </li>
            <li class="active treeview">
              <a href="#">
                <i class="fa fa-table"></i> <span>Tables</span>
                <i class="fa fa-angle-left pull-right"></i>
              </a>
              <ul class="treeview-menu">
                <li><a href="/admin/farmers/list"><i class="fa fa-circle-o"></i> Farmers List</a></li>
                <li><a href="/admin/products/list"><i class="fa fa-circle-o"></i> Products List</a></li>
                <li><a href="/admin/trucks/list"><i class="fa fa-circle-o"></i> Trucks List</a></li>
                <li class="active"><a href="/admin/drivers/list"><i class="fa fa-circle-o"></i> Drivers List</a></li>
                <li><a href="/admin/customers/list"><i class="fa fa-circle-o"></i> Customers List</a></li>
                <li><a href="/admin/orders/list"><i class="fa fa-circle-o"></i> Orders List</a></li>
              </ul>
            </li>
          </ul>
        </section>
        <!-- /.sidebar -->
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Drivers Data Tables
            <small>All data</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="/admin/home"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Tables</li>
            <li class="active">Drivers table</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content" style="overflow: scroll;">
          <div class="row">
            <div class="col-xs-12" style="overflow: scroll; width: auto;">
              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Drivers Data Table</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="example1" class="table table-bordered table-hover table-striped">
                    <thead>
                      <tr>
                        <th>Driver Id</th>
                        <th>Truck Id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>ZIP</th>
                        <th>Contacts</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr ng-repeat="driver in drivers">
                        <td>
                          {{driver.driver_id}}
                        </td>
                        <td>
                          <span editable-text="driver.t_id" e-name="t_id" e-form="driverform" e-required>
                             {{ driver.t_id || 'empty' }}
                          </span>
                        </td>
                        <td>
                          <span editable-text="driver.fname" e-name="fname" e-form="driverform" e-required>
                             {{ driver.fname || 'empty' }}
                          </span>
                        </td>
                        <td>
                          <span editable-text="driver.lname" e-name="lname" e-form="driverform">
                             {{ driver.lname || 'empty' }}
                          </span>
                        </td>
                        <td>
                          <span editable-text="driver.email" e-name="email" e-form="driverform" onbeforesave="checkEmail($data)">
                             {{ driver.email || 'empty' }}
                          </span>
                        </td>
                        <td>
                          <span editable-text="driver.address" e-name="address" e-form="driverform">
                             {{ driver.address || 'empty' }}
                          </span>
                        </td>
                        <td>
                          <span editable-text="driver.city" e-name="city" e-form="driverform">
                             {{ driver.city || 'empty' }}
                          </span>
                        </td>
                        <td>
                          <span editable-text="driver.state" e-name="state" e-form="driverform">
                             {{ driver.state || 'empty' }}
                          </span>
                        </td>
                        <td>
                          <span editable-text="driver.zipCode" e-name="zipCode" e-form="driverform">
                             {{ driver.zipCode || 'empty' }}
                          </span>
                        </td>
                        <td>
                          <span editable-text="driver.contacts" e-name="contacts" e-form="driverform">
                             {{ driver.contacts || 'empty' }}
                          </span>
                        </td>
                        <td>
                        <form editable-form name="driverform" ng-show="driverform.$visible" class="form-buttons form-inline"
                          shown="inserted == driver" onbeforesave="saveDriver($data,driver.driver_id)">
                        <button type="submit" ng-disabled="driverform.$waiting" class="btn btn-primary editable-table-button btn-xs">
                          Save
                        </button>
                        <button type="button" ng-disabled="driverform.$waiting" ng-click="driverform.$cancel()" class="btn btn-default editable-table-button btn-xs">
                          Cancel
                        </button>
                        </form>
                        <div class="buttons" ng-show="!driverform.$visible">
                          <button class="btn btn-primary editable-table-button btn-xs" ng-click="driverform.$show()">Edit</button>
                          <button class="btn btn-danger editable-table-button btn-xs" ng-click="removeDriver(driver.driver_id)">Delete</button>
                        </div>
                        </td>
                      </tr>
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>Driver Id</th>
                        <th>Truck Id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>ZIP</th>
                        <th>Contacts</th>
                      </tr>
                    </tfoot>
                  </table>
                  <button class="btn btn-default" id = "adddriver" data-toggle = "modal" data-target = "#addDriverModal">Add Driver</button>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->


          <!-- Add Driver Modal -->
          <div id="addDriverModal" class= "modal fade" role = "dialog">
            <div class= "modal-dialog modal-md">
              <!-- Add Driver Modal Content -->
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h3 class="moda-title">Add Driver</h3>
                </div>
                <div class="modal-body">
                  <div role="form" name="adddriverform">
                    <div class="form-group">
                      <label for="t_id">Truck ID</label>
                      <input type="text" class="form-control" placeholder="Enter Truck ID" name="t_id" ng-model="t_id" required>
                      <!-- <div role="alert">
                        <span class="error" ng-show="invalid_t_id">Invalid Truck ID!</span>
                      </div>
                      <div role="alert">
                        <span class="error" ng-show="t_id_exist">Truck ID Already Assigned!</span>
                      </div>
                      <div role="alert">
                        <span class="error" ng-show="unexpected_error">Unexpected Error Occurred!</span>
                      </div> -->
                    </div>
                    <div class="form-group">
                      <label for="fname">First Name</label>
                      <input type="text" class="form-control" placeholder="Enter First Name" name="fname" ng-model="fname" required>
                      <!-- <div role="alert">
                        <span class="error" ng-show="adddriverform.fname.$error.required">Invalid First Name!</span>
                      </div> -->
                    </div>
                    <div class="form-group">
                      <label for="lname">Last Name</label>
                      <input type="text" class="form-control" placeholder="Enter Last Name" name="lname" ng-model="lname">
                      <!-- <div role="alert">
                        <span class="error" ng-show="adddriverform.lname.$error.required">Invalid Last Name!</span>
                      </div> -->
                    </div>
                    <div class="form-group">
                      <label for="email">Email</label>
                      <input type="email" class="form-control" placeholder="Enter Email" name="email" ng-model="email" required>
                      <!-- <div role="alert">
                        <span class="error" ng-show="adddriverform.email.$error.required">Invalid First Name!</span>
                      </div> -->
                    </div>
                    <div class="form-group">
                      <label for="address">Address</label>
                      <input type="text" class="form-control" placeholder="Enter Address" name="address" ng-model="address" required>
                      <!-- <div role="alert">
                        <span class="error" ng-show="adddriverform.email.$error.required">Invalid First Name!</span>
                      </div> -->
                    </div>
                    <div class="form-group">
                      <label for="address">City</label>
                      <input type="text" class="form-control" placeholder="Enter City" name="city" ng-model="city" required>
                      <!-- <div role="alert">
                        <span class="error" ng-show="adddriverform.email.$error.required">Invalid First Name!</span>
                      </div> -->
                    </div>
                    <div class="form-group">
                      <label for="state">State</label>
                      <input type="text" class="form-control" placeholder="Enter State" name="state" ng-model="state" required>
                      <!-- <div role="alert">
                        <span class="error" ng-show="adddriverform.email.$error.required">Invalid First Name!</span>
                      </div> -->
                    </div>
                    <div class="form-group">
                      <label for="zipCode">Zip Code</label>
                      <input type="text" class="form-control" placeholder="Enter Zip Code" name="zipCode" ng-model="zipCode" required>
                      <!-- <div role="alert">
                        <span class="error" ng-show="adddriverform.email.$error.required">Invalid First Name!</span>
                      </div> -->
                    </div>
                    <div class="form-group">
                      <label for="contacts">Contacts</label>
                      <input type="text" class="form-control" placeholder="Enter Contacts" name="contacts" ng-model="contacts" required>
                      <!-- <div role="alert">
                        <span class="error" ng-show="adddriverform.email.$error.required">Invalid First Name!</span>
                      </div> -->
                    </div>
                    <button class="btn btn-default" ng-click="addDriver();">Add Driver</button>
                  </div>
                </div>
                <!-- Content End for Modal-->
              </div>
            </div>
          </div>
          <!-- Add Driver Modal End -->

        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->
      <footer class="main-footer">
        <% include ./partials/admin-footer %>
      </footer>
      <% include ./partials/admin-aside %> 
      <!-- Add the sidebar's background. This div must be placed
           immediately after the control sidebar -->
      <div class="control-sidebar-bg"></div>
    </div><!-- ./wrapper -->

    <!-- jQuery 2.1.4 -->
    <script src="/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <!-- DataTables -->
    <script src="/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="/plugins/fastclick/fastclick.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/dist/js/app.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="/dist/js/demo.js"></script>
